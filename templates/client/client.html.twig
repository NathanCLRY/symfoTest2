{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		<h1 class="text-center">Mes clients</h1>
		<div class="text-center">
			<a href="{{ path('client.new') }}" class="btn btn-primary m-4">Ajouter un client</a>
		</div>
		<table class="table table-hover m-4">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Nom</th>
					<th scope="col">PrÃ©nom</th>
					<th scope="col">Email</th>
					<th scope="col">Modification</th>
					<th scope="col">Supression</th>
				</tr>
			</thead>
			<tbody>

				{% for client in clients %}
					<tr class="table-active">
						<th scope="row">{{ client.id }}</th>
						<td>{{ client.nom }}</td>
						<td>{{ client.prenom }}</td>
						<td>{{ client.email }}</td>
						<td>
							<a href="{{ path('client.edit',{ id: client.id }) }}" class="btn btn-warning">Modifier</a>
						</td>
						<td>
							<a href="{{ path('client.sup',{ id: client.id }) }}" class="btn btn-danger">Supprimer</a>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>
{% endblock %}
